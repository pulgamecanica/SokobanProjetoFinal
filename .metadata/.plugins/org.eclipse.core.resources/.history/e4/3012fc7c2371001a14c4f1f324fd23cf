package pt.iscte.dcti.poo.sokoban.starter;

import pt.iul.ista.poo.gui.ImageTile;
import pt.iul.ista.poo.utils.Point2D;

public class BigStone implements ElementKey, ImageTile {

	private Point2D Point2D;
	private int level;
	private boolean canStepHere = false;

	public BigStone(Point2D Point2D, int level){
		this.Point2D = Point2D;
		this.level = level;
	}
	
	@Override
	public String getName() {
		return "BigStone";
	}

	@Override
	public Point2D getPosition() {
		return Point2D;
	}

	@Override
	public int getLayer() {
		return level;
	}

	@Override
	public boolean canMove() {
		return true;
	}

	@Override
	public boolean canStepOn() {
		//BIGSTONEACTIVATED
		return canStepHere;
	}

	@Override
	public ImageTile getImage() {
		return this;
	}

	@Override
	public void setSurfaceUnderneath() {
		canStepHere = true;
	}

	@Override
	public void updateElementUP() {
		Point2D newPosition = new Point2D(position.getX(), position.getY() - 1);
	}

	@Override
	public void updateElementDOWN() {
		Point2D newPosition = new Point2D(position.getX(), position.getY() + 1);
		
	}

	@Override
	public void updateElementRIGHT() {
		Point2D newPosition = new Point2D(position.getX() + 1, position.getY());
	}

	@Override
	public void updateElementLEFT() {
		Point2D newPosition = new Point2D(position.getX() - 1, position.getY());
		
	}

}
